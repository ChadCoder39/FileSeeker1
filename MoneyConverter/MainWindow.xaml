<Window x:Class="FileSearchApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Search App" Height="350" Width="500">
    <Grid Background="#FF28980D">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Write the file name" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="164,10,0,0" Grid.RowSpan="3"/>

        <TextBox x:Name="txtFileName" Grid.Row="2" Margin="100,36,0,0" Width="300" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" />

        <Button x:Name="btnSearch" Grid.Row="2" Content="Search" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnSearch_Click" Grid.ColumnSpan="2" Margin="181,72,0,0" />

        <TextBlock x:Name="txtResult" Grid.Row="2" Margin="27,129,0,0" Width="300" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
    </Grid>
</Window>



